{
  "extends": "./tsconfig.json",
  "include": [
    "./src/server",
    "./src/index.ts"
  ],
  "compilerOptions": {
    "outDir": "lib",
    "module": "esnext",
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "types": [
      "node",
    ]
  }
}